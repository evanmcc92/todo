<% if @tasks %>
	<div id="incompleted-tasks">
	<h3>Current Tasks</h3>
	<% @tasks.each do |task| %>
		<% if task.complete == false %>
			<div class="panel panel-<%= task.priority %>">
				<div class="panel-heading">
						<div class="panel-title">
						<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= task.id %>">
							<%= task.title %>
						</a>
						<% if task.description || task.due || task.reminder %>
							<span class="glyphicon glyphicon-pin"></span>
						<% end %>
						
						<div class="right">
							<%= form_for task do |f| %>
								<%= f.hidden_field :complete, :value => true %>
								<%= f.submit "Complete", class: "btn btn-default btn-sm" %>
							<% end %>
						</div>
					</div>
				</div>
				<div id="collapse<%= task.id %>" class="panel-collapse collapse in">
					<div class="panel-body">
						<p>Description: <%= task.description %></p>
						<p>Priority: <%= task.priority %></p>
						<p>Due Date: <%= task.due %></p>
						<p>Reminder Time: <%= task.reminder %></p>
						<p>Complete: <%= task.complete ? 'Yes' : 'No' %></p>
						<p><%= link_to ' Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete your account?' }, class: "glyphicon glyphicon-trash" %> 
						<%= link_to ' Edit', edit_task_path(task), class: "glyphicon glyphicon-pencil" %></p>
						
					</div>
				</div>
			</div>
		<% end %>
	<% end %>
	</div>


	<div id="completed-tasks">
	<h3>Complete Tasks</h3>
		<% @tasks.each do |task| %>
			<% if task.complete %>
			<div class="panel panel-<%= task.priority %>">
				<div class="panel-heading">
						<div class="panel-title">
						<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= task.id %>">
							<%= task.title %>
						</a>
						<% if task.description || task.due || task.reminder %>
							<span class="glyphicon glyphicon-pin"></span>
						<% end %>
						
						<div class="right">
							<%= form_for task do |f| %>
								<%= f.hidden_field :complete, :value => false %>
								<%= f.submit "Complete", class: "btn btn-default btn-sm" %>
							<% end %>
						</div>
					</div>
				</div>
				<div id="collapse<%= task.id %>" class="panel-collapse collapse in">
					<div class="panel-body">
						<p>Description: <%= task.description %></p>
						<p>Priority: <%= task.priority %></p>
						<p>Due Date: <%= task.due %></p>
						<p>Reminder Time: <%= task.reminder %></p>
						<p>Complete: <%= task.complete ? 'Yes' : 'No' %></p>
						<p><%= link_to ' Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete your account?' }, class: "glyphicon glyphicon-trash" %> 
						<%= link_to ' Edit', edit_task_path(task), class: "glyphicon glyphicon-pencil" %></p>
					</div>
				</div>
			</div>
			<% end %>
		<% end %>
	</div>
<% end %>
