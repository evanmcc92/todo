<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% if @tasks %>
	<% for task in @tasks %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= task.id %>">
					<h3 class="panel-title"><%= task.title %></h3>
				</a>
			</div>
			<div id="collapse<%= task.id %>" class="panel-collapse collapse in">
				<div class="panel-body">
					<p>Description: <%= task.description %></p>
					<p>Priority: <%= task.priority %></p>
					<p>Due Date: <%= task.due %></p>
					<p>Reminder Time: <%= task.reminder %></p>
				</div>
			</div>
		</div>
	<% end %>
<% end %>